{
  "name": "hourlybank-be",
  "version": "1.0.0",
  "main": "server.js",
  "license": "MIT",
  "scripts": {
    "start": "node build/src/server.js",
    "dev": "tsnd --watch --transpile-only --rs ./src/server.ts",
    "secret": "cd src && mkdir ssh && cd ssh && ssh-keygen -t rsa -b 4096 -m PEM -f jwtRS256.key -P \"\"  && cd ../../",
    "build": "tsc && mkdir \"./dist/src/ssh\" && cp -r ./src/ssh ./dist/src/ssh ",
    "prisma": "prisma generate && prisma db push",
    "test": "jest --silent=false --watchAll",
    "test:cov": "jest --coverage"
  },
  "devDependencies": {
    "@swc/core": "^1.3.35",
    "@swc/jest": "^0.2.24",
    "@types/jest": "^29.4.0",
    "@types/jsonwebtoken": "^9.0.1",
    "@types/node": "^18.11.18",
    "jest": "^29.4.3",
    "prisma": "^5.1.1",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^4.9.5"
  },
  "dependencies": {
    "@apollo/server": "^4.9.0",
    "@graphql-tools/utils": "^10.0.4",
    "@prisma/client": "^5.1.1",
    "apollo-server": "^3.11.1",
    "dotenv": "^16.0.3",
    "graphql": "^16.7.1",
    "jsonwebtoken": "^9.0.0",
    "pm2": "^5.2.2"
  }
}
