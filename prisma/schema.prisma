// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id       String   @id @default(auto()) @map("_id") @db.ObjectId
  username String?
  email    String   @unique
  password String
  project  Project?
}

model Project {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  name       String
  dateStart  DateTime
  dateFinish DateTime
  desc       String
  hourStart  String
  hourFinish String
  price      Int
  finished   Boolean
  user       User     @relation(fields: [userId], references: [id])
  userId     String   @unique @db.ObjectId
}
